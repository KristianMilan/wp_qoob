<?xml version="1.0" encoding="utf-8"?>
<template>
  <author>Mike van Riel</author>
  <email>mike@phpdoc.org</email>
  <version>1.0.0</version>
  <copyright>Mike van Riel 2013</copyright>
  <description><![CDATA[

      To improve performance you can add the following to your .htaccess:

      <ifModule mod_deflate.c>
          <filesMatch "\.(js|css|html)$">
              SetOutputFilter DEFLATE
          </filesMatch>
      </ifModule>
  ]]></description>
  <transformations>
    <transformation query="copy" writer="FileIo" source="templates/new_clean/htaccess.dist" artifact=".htaccess"/>
    <transformation query="copy" writer="FileIo" source="templates/new_clean/images" artifact="images"/>
    <transformation query="copy" writer="FileIo" source="templates/new_clean/css" artifact="css"/>
    <transformation query="copy" writer="FileIo" source="templates/new_clean/js" artifact="js"/>
    <transformation query="copy" writer="FileIo" source="templates/new_clean/font" artifact="font"/>
    <transformation writer="twig" query="namespace" source="templates/new_clean/namespace.html.twig" artifact="index.html">
      <parameters>
         <parameter key="twig-debug">true</parameter>
      </parameters>  
    </transformation>
    <transformation writer="twig" query="indexes.namespaces" source="templates/new_clean/namespace.html.twig" >
      <parameters>
         <parameter key="twig-debug">true</parameter>
      </parameters>  
    </transformation>
    <transformation writer="twig" query="indexes.classes" source="templates/new_clean/class.html.twig" >
      <parameters>
         <parameter key="twig-debug">true</parameter>
      </parameters>  
    </transformation>
    <transformation writer="twig" query="indexes.interfaces" source="templates/new_clean/interface.html.twig" >
      <parameters>
         <parameter key="twig-debug">true</parameter>
      </parameters>  
    </transformation>
    <transformation writer="twig" query="indexes.traits" source="templates/new_clean/class.html.twig" >
      <parameters>
         <parameter key="twig-debug">true</parameter>
      </parameters>  
    </transformation>
    <transformation writer="twig" query="files" source="templates/new_clean/file.html.twig">
      <parameters>
         <parameter key="twig-debug">true</parameter>
      </parameters>  
    </transformation>
    <transformation writer="twig" query="files" source="templates/new_clean/file.source.txt.twig" artifact="files/{{path}}.txt">
      <parameters>
         <parameter key="twig-debug">true</parameter>
      </parameters>  
    </transformation>
    <transformation writer="twig" source="templates/new_clean/reports/markers.html.twig" artifact="reports/markers.html">
      <parameters>
         <parameter key="twig-debug">true</parameter>
      </parameters>  
    </transformation>
    <transformation writer="twig" source="templates/new_clean/reports/errors.html.twig" artifact="reports/errors.html">
      <parameters>
         <parameter key="twig-debug">true</parameter>
      </parameters>  
    </transformation>
    <transformation writer="twig" source="templates/new_clean/reports/deprecated.html.twig" artifact="reports/deprecated.html">
      <parameters>
         <parameter key="twig-debug">true</parameter>
      </parameters>  
    </transformation>
    <transformation writer="twig" source="templates/new_clean/graphs/class.html.twig" artifact="graphs/class.html">
      <parameters>
         <parameter key="twig-debug">true</parameter>
      </parameters>  
    </transformation>
    <transformation writer="Graph" source="Class" artifact="graphs/classes.svg" />

  </transformations>
</template>
